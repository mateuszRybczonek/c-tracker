<div class="tbl-header">
  <table cellpadding="0" cellspacing="0" border="0">
    <thead>
      <tr class='header-row'>
        <th class='hidden-xs'>Employer</th>
        <th>Vessel's name</th>
        <th class='hidden-xs'>Vessel's Type</th>
        <th class='hidden-xs'>Vessel's GT</th>
        <th>Position</th>
        <th class='hidden-xs'>Sign on</th>
        <th class='hidden-xs'>Sign off</th>
        <th class='hidden-sm hidden-md hidden-lg hidden-xl'>Dates</th>
        <th class='hidden-xs'>Days on board / DP Time</th>
        <th class='hidden-xs'>DP Class</th>
        <th></th>
      </tr>
    </thead>
  </table>
</div>
<div class="tbl-content">
  <table cellpadding="0" cellspacing="0" border="0">
    <tbody>
    {{#each sortedSeaservice as |seaservice|}}
      {{seaservice-item seaservice=seaservice session=session}}
    {{else}}
      <p class='no-data'>
        You have no seaservice registered
        {{#link-to 'users.seaservice.new' class='link-item'}}
          Add new seaservice
        {{/link-to}}
      </p>
    {{/each}}
    </tbody>
  </table>
</div>

<div class="layout-row flex">
  <div class="layout-column flex">
    {{#paper-card as |card|}}
      {{#paper-button raised=true disabled=true}}{{createdAtFormatted}}{{/paper-button}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}{{certificate.name}}{{/text.headline}}
          {{#text.subhead}}{{certificate.number}}{{/text.subhead}}
        {{/title.text}}
      {{/card.title}}
      {{#card.content}}
        {{markdown-to-html certificate.comment}}
      {{/card.content}}
      {{#if isOwner}}
        <div class="text-right">
          {{#paper-button iconButton=true}}
            {{#link-to 'certificates.edit' certificate.id}}{{paper-icon "create"}}{{/link-to}}
          {{/paper-button}}
          {{#paper-button iconButton=true onClick=(action 'deleteCertificate' certificate)}}
            {{paper-icon "delete"}}
          {{/paper-button}}
          {{yield}}
        </div>
      {{/if}}
    {{/paper-card}}
  </div>
</div>

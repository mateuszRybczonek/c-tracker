<div class="layout-row flex">
  <div class="layout-column flex">
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}{{post.title}}{{/text.headline}}
          {{#text.subhead}}{{post.category}}{{/text.subhead}}
        {{/title.text}}
      {{/card.title}}
      {{#card.content}}
        {{post.description}}
      {{/card.content}}
      {{#if isOwner}}
        <div class="text-right">
          {{#paper-button iconButton=true}}
            {{#link-to 'posts.edit' post.id}}{{paper-icon "create"}}{{/link-to}}
          {{/paper-button}}
          {{#paper-button iconButton=true onClick=(action 'deletePost' post)}}
            {{paper-icon "delete"}}
          {{/paper-button}}
          {{yield}}
        </div>
      {{/if}}
    {{/paper-card}}
  </div>
</div>

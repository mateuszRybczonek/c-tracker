<div class="layout-row flex">
  <div class="layout-column flex">
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}{{post.title}}{{/text.headline}}
          {{#text.subhead}}{{post.category}}{{/text.subhead}}
        {{/title.text}}
      {{/card.title}}
      {{#card.content}}
        {{post.description}}
      {{/card.content}}
      <div class="text-right">
        {{yield}}
      </div>
    {{/paper-card}}
  </div>
</div>

<h2>Certificates</h2>
<div class="tbl-header">
  <table cellpadding="0" cellspacing="0" border="0">
    <thead>
      <tr class='header-row'>
        <th>Name</th>
        <th>Expiry Date
          <span class='hidden-xs'>
            {{ui/action-button
              onClick=(action 'updateSorting' 'expiryDate:desc')
              iconButton=true
              icon="arrow-downward"
              class='small'
              size=12
            }}
            {{ui/action-button
              onClick=(action 'updateSorting' 'expiryDate:asc')
              iconButton=true
              icon="arrow-upward"
              class='small'
              size=12
            }}
          </span>
        </th>
      </tr>
    </thead>
  </table>
</div>
<div class="tbl-content">
  <table cellpadding="0" cellspacing="0" border="0">
    <tbody>
    {{#if sortedCertificates}}
      {{#each sortedCertificates as |certificate|}}
        {{shared-cv/summary/certificates-table/item certificate=certificate}}
      {{/each}}
    {{/if}}
    </tbody>
  </table>
</div>

<h2>{{title}}</h2>
<div class="tbl-header">
  <table cellpadding="0" cellspacing="0" border="0">
    <thead>
      <tr class='header-row'>
        <th>Name</th>
        <th class='hidden-xs'>Number</th>
        <th class='hidden-xs'>Issue date</th>
        <th>Expiry Date
          <span class='hidden-xs'>
            {{ui/action-button
              onClick=(action 'updateSorting' 'expiryDate:desc')
              iconButton=true
              icon="arrow-downward"
              class='small'
              size=12
            }}
            {{ui/action-button
              onClick=(action 'updateSorting' 'expiryDate:asc')
              iconButton=true
              icon="arrow-upward"
              class='small'
              size=12
            }}
          </span>
        </th>
        <th>
          <span class='hidden-sm hidden-md hidden-lg hidden-xl'>
            {{ui/action-button
              onClick=(action 'updateSorting' 'expiryDate:desc')
              iconButton=true
              icon="arrow-downward"
              class='small'
              size=12
            }}
            {{ui/action-button
              onClick=(action 'updateSorting' 'expiryDate:asc')
              iconButton=true
              icon="arrow-upward"
              class='small'
              size=12
            }}
          </span>
        </th>
      </tr>
    </thead>
  </table>
</div>
<div class="tbl-content">
  <table cellpadding="0" cellspacing="0" border="0">
    <tbody>
    {{#if sortedCertificates}}
      {{#each sortedCertificates as |certificate|}}
        {{shared-cv/certificates-table/item certificate=certificate userId=userId}}
      {{/each}}
    {{/if}}
    </tbody>
  </table>
</div>

<div class="row">
  {{#each model as |post|}}
    <div class="col-md-4">
      <div class="panel panel-default post-item">
        <div class="panel-heading">
          <h3 class="panel-title">{{post.title}}</h3>
          <h4 class="panel-category">{{post.category}}</h4>
        </div>
        <div class="panel-body">
          <p>Description: {{post.description}}</p>
        </div>
        <div class="panel-footer text-right">
          {{#link-to 'posts.edit' post.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deletePost' post}}>Delete</button>
        </div>
      </div>
    </div>
  {{else}}
    <p>You have no posts</p>
  {{/each}}
</div>
<div class="row">
  {{#each model as |post|}}
    <div class="col-md-4">
      {{#post-item post=post}}
        {{#link-to 'posts.edit' post.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deletePost' post}}>Delete</button>
      {{/post-item}}
    </div>
  {{else}}
    <p>You have no posts</p>
  {{/each}}
</div>
<div class="container">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        {{#link-to 'index' class="navbar-brand"}}C-tracker{{/link-to}}
      </div>

      <div class="collapse navbar-collapse" id="main-navbar">
        <ul class="nav navbar-nav">
          {{#if session.isAuthenticated}}
            {{#nav-link-to 'certificates'}}Certificates{{/nav-link-to}}
            {{#nav-link-to 'snippets'}}Snippets{{/nav-link-to}}
          {{else}}
            {{#nav-link-to 'index'}}Log in{{/nav-link-to}}
          {{/if}}
        </ul>

        <ul class="nav navbar-nav navbar-right">
          {{#if session.isAuthenticated}}
            <img src={{session.currentUser.photoURL }} height="30" width="30">
            <span class="user-name">{{session.currentUser.displayName}}</span>
            <i {{action 'signOut'}}>{{fa-icon 'sign-out' class="zoom-in-icon navbar-icon"}}</i>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
  {{outlet}}
</div>
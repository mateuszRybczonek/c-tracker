<div class="container">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        {{#link-to 'index' class="navbar-brand"}}Ember TIL{{/link-to}}
      </div>

      <div class="collapse navbar-collapse" id="main-navbar">
        <ul class="nav navbar-nav">
          {{#nav-link-to 'index'}}Home{{/nav-link-to}}
          {{#nav-link-to 'posts'}}Posts{{/nav-link-to}}
          {{#nav-link-to 'snippets'}}Snippets{{/nav-link-to}}
          {{#nav-link-to 'contact'}}Contact{{/nav-link-to}}
          {{#if isAdmin}}
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Admin<span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                {{#nav-link-to 'admin.invitations'}}Invitations{{/nav-link-to}}
                {{#nav-link-to 'admin.contacts'}}Contacts{{/nav-link-to}}
              </ul>
            </li>
          {{/if}}
        </ul>

        <ul class="nav navbar-nav navbar-right">
          {{#unless session.isAuthenticated}}
          <i class="zoom-in-icon" {{action 'signIn' 'google'}}>{{fa-icon 'sign-out' class='navbar-icon'}}</i>
          {{else}}
            <i>{{fa-icon 'user' class='navbar-icon'}}</i>
            <span class="user-name">{{session.currentUser.displayName}}</span>
            <i {{action 'signOut'}}>{{fa-icon 'sign-out' class="zoom-in-icon navbar-icon"}}</i>
          {{/unless}}
        </ul>
      </div>
    </div>
  </nav>
  {{outlet}}
</div>
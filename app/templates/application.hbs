{{#if session.isAuthenticated}}
  <nav class="navbar navbar-inverse navbar-logged-in">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span class="navbar-brand">C-tracker</span>
      </div>

      <div class="collapse navbar-collapse" id="main-navbar">
        <ul class="nav navbar-nav">
          {{#nav-link-to 'users.dashboard'}}Dashboard{{/nav-link-to}}
          {{#nav-link-to 'users.certificates'}}Certificates{{/nav-link-to}}
          {{#nav-link-to 'users.seaservice'}}Seaservice{{/nav-link-to}}
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <img src={{session.currentUser.photoURL }} height="30" width="30">
          <span class="user-name">{{session.currentUser.displayName}}</span>
          <i {{action 'signOut'}}>{{fa-icon 'sign-out' class="zoom-in-icon navbar-icon"}}</i>
        </ul>
      </div>
    </div>
  </nav>
{{else}}
  <nav class="navbar navbar-inverse navbar-logged-out">
    <div class="container-fluid">
      <div class="navbar-header">
        <span class="navbar-brand">C-tracker</span>
      </div>
    </div>
  </nav>
{{/if}}
<div class="container">
    {{outlet}}
</div>
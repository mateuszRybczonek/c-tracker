<div class="form-horizontal has-feedback {{if post.isValid 'has-success'}}">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=post.title class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Category</label>
    <div class="col-sm-10">
      {{input type="text" value=post.category class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input type="text" value=post.description class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'buttonClicked' post}} disabled={{unless post.isValid true}}>{{buttonLabel}}</button>
    </div>
  </div>
</div>

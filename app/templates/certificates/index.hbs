{{#paper-toolbar as |toolbar|}}
  {{#sticky-container options=stickyOptions }}
    {{#toolbar.tools}}
      {{ui/search-input value=searchTerm onChange=(action (mut searchTerm))}}
      <span class="flex"></span>
      {{ui/link-button
        destination=(query-params sortBy="createdAtDesc")
        iconButton=true
        icon="arrow-downward"
        class='zoom-in-icon'
      }}
      {{ui/link-button
        destination=(query-params sortBy="createdAtAsc")
        iconButton=true
        icon="arrow-upward"
        class='zoom-in-icon'
      }}
    {{/toolbar.tools}}
  {{/sticky-container}}
{{/paper-toolbar}}
<div class="row">
  {{#each sortedCertificates as |certificate|}}
    <div>
      {{certificate-item certificate=certificate session=session}}
    </div>
  {{else}}
    <p>You have no certificates</p>
  {{/each}}
</div>
